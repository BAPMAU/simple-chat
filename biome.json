{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "jsxRuntime": "reactClassic"
  },
  "files": {
    "ignore": ["node_modules", "dist", "src/components/ui"]
  }
}
